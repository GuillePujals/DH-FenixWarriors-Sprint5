<!DOCTYPE html>
<html>

<%- include ('../partials/head') %>
    <link rel="stylesheet" href="/css/editProduct.css">

    <body>

        <%- include ('../partials/header') %>

            <main class="main">
                <h3>Edición de productos</h3>
                <form action="/products/<%= casa.id %>/edit?_method=PUT" method="POST" class="form" enctype="multipart/form-data">
                    <div class="campo">
                        <label for="nombre">Nombre</label>
                        <input type="text" name="nombre" value="<%= casa.nombre %>">
                    </div>
                    <div class="campo">
                        <label for="descrip">Descripción</label>
                        <input type="text" name="descrip" value="<%= casa.descrip %>">
                    </div>
                        <div class="campo">
                            <label for="image">Imagen</label>
                            <input type="file" name="image">
                            <input type="hidden" name="oldImage"
                            value="<%= locals.casa ? casa.image : '0' %>">
                        </div>
                    </div>
                    <div class="campo">
                        <label for="categ">Categoría</label>
                        <input type="text" name="categ" value="<%= casa.categ %>">
                    </div>
                    <div class="campo">
                        <label for="habit">Cantidad de Habitaciones</label>
                        <input type="text" name="habit" value="<%= casa.habit %>" class="habit">
                    </div>
                    <div class="campo">
                        <label for="price">Precio</label>
                        <input type="number" name="price" value="<%= casa.price %>" class="precio">
                    </div>
                    <div class="campo">
                        <label for="location">Ubicacion</label>
                        <input type="text" name="ubicacion" value="<%= casa.ubicacion %>">
                    </div>
                    <div class="campo">
                        <label for="city">Ciudad</label>
                        <input type="text" name="ciudad" value="<%= casa.ciudad %>">
                    </div>
                    <div class="campo">
                        <label for="terms">Condiciones</label>
                        <input type="text" name="condiciones" value="<%= casa.condiciones %>">
                    </div>
                    <div class="campo">
                        <label for="services">Servicios</label> <br>
                        <input type="checkbox" name="servicios" value="wifi" >
                        <label for="servicios">Wi-fi</label> 
                        <br>
                        <input type="checkbox" name="servicios" value="pileta">
                        <label for="servicios">Pileta</label>
                        <br>
                        <input type="checkbox" name="servicios" value="estacionamiento"> 
                        <label for="servicios">Estacionamiento</label>
                        <br>
                        <input type="checkbox" name="servicios" value="parrilla"> 
                        <label for="servicios">Parrilla</label>
                        <br>
                        <input type="checkbox" name="servicios" value="aireacondicionado">
                        <label for="servicios">Aire acondicionado</label>
                         <br>

                    <!--
                        <input type="text" name="servicios" value="<%= casa.servicios %>">  
                    -->
                    </div>

                    <button type="submit" class="button">Actualizar</button>
                    <button type="reset" class="button">Cancelar</button>
                </form>
                <form action="/products/<%= casa.id %>">
                    <button  class="button">Volver</button>
                </form>


            </main>
            <%- include ('../partials/footer') %>


    </body>

</html>